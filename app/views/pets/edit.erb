<h1>Update Pet</h1>

<form method="post" action="/pets/<%= @pet.id %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  
  <h4>Change your pet's name here</h4>
  <p>
    <label for="pet_name">Name:</label>
    <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">
  </p>
  
  <h3>Choose a different owner from the list below, or create a new one.</h3>
  
  <h4>Existing Owners</h4>
  <% @owners.each do |owner| %>
    <!-- I need to figure out how to select the pet's current owner by default -->
    <input type="radio" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input>
  <% end %>
  
  <p><input type="submit" value="Update Pet"></p>
</form>
